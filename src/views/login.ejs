<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SSO Login</title>
    <!-- Latest compiled and minified CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Bootstrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Poppins"
      rel="stylesheet"
    />
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  </head>
  <style>
    :root {
      --primary-color: #2563eb;
      --secondary-color: #64748b;
      --danger-color: #dc2626;
      --success-color: #16a34a;
      --background-color: #f8fafc;
      --card-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1),
        0 2px 4px -2px rgb(0 0 0 / 0.1);
    }
    body {
      font-family: "Poppins", sans-serif;
      font-size: 16px;
      line-height: 1.6;
      background-color: var(--background-color);
      color: #334155;
    }
    .card {
      border: none;
      border-radius: 16px;
      box-shadow: var(--card-shadow);
      background: white;
      transition: transform 0.2s ease;
    }

    .card:hover {
      transform: translateY(-2px);
    }
    .card-body {
      padding: 2.5rem;
    }
    .btn-back {
      padding: 0.5rem 0;
      color: var(--secondary-color) !important;
      transition: color 0.2s ease;
    }

    .btn-back:hover {
      color: var(--primary-color) !important;
    }

    .bi-google {
      font-size: 24px;
      color: #ea4335;
    }
    .bi-facebook {
      font-size: 24px;
      color: #1877f2;
    }

    .card-title {
      font-size: 2rem;
      font-weight: 600;
      color: #1e293b;
    }

    .form-label {
      font-weight: 500;
      color: #475569;
      margin-bottom: 0.5rem;
    }

    .form-control {
      padding: 0.75rem 1rem;
      border-radius: 8px;
      border: 1px solid #e2e8f0;
      font-size: 0.95rem;
      transition: all 0.2s ease;
    }

    .form-control:focus {
      border-color: var(--primary-color);
      box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
    }

    .input-group .btn {
      border-top-right-radius: 8px;
      border-bottom-right-radius: 8px;
    }
    /* .login-container {
      padding-top: 20px;
    } */
    .none-error-message {
      display: none;
    }
    .form-control.is-invalid {
      border-color: #dc3545;
      background-image: none;
    }

    .alert {
      transition: all 0.3s ease-in-out;
    }

    .none-error-message {
      display: none;
      opacity: 0;
    }

    /* Add password toggle button styles */
    #togglePassword {
      cursor: pointer;
    }

    #togglePassword:hover {
      background-color: #e9ecef;
    }

    /* Add shake animation for errors */
    @keyframes shake {
      0%,
      100% {
        transform: translateX(0);
      }
      10%,
      30%,
      50%,
      70%,
      90% {
        transform: translateX(-5px);
      }
      20%,
      40%,
      60%,
      80% {
        transform: translateX(5px);
      }
    }

    .shake {
      animation: shake 0.6s cubic-bezier(0.36, 0.07, 0.19, 0.97) both;
    }

    /* Add to your existing styles */
    hr {
      position: relative;
      border: none;
      height: 1px;
      background: #333;
      margin: 20px 0;
    }

    #btn-login {
      padding: 0.75rem;
      font-weight: 500;
      border-radius: 8px;
      background-color: var(--primary-color);
      border: none;
      transition: all 0.2s ease;
    }

    #btn-login:hover {
      background-color: #1d4ed8;
      transform: translateY(-1px);
    }

    .text-danger {
      color: var(--danger-color) !important;
    }

    hr {
      border-color: #e2e8f0;
      opacity: 0.2;
    }

    /* Social login buttons */
    .social-login {
      display: flex;
      gap: 1rem;
      justify-content: center;
    }

    .social-btn {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 48px;
      height: 48px;
      border-radius: 50%;
      background-color: #f8fafc;
      transition: all 0.2s ease;
    }

    .bi-google {
      font-size: 24px;
      color: #ea4335;
    }

    .bi-facebook {
      font-size: 24px;
      color: #1877f2;
    }

    .social-btn:hover {
      transform: translateY(-2px);
      background-color: #f1f5f9;
    }

    /* Alert styles */
    .alert {
      border-radius: 8px;
      font-size: 0.9rem;
      padding: 1rem;
    }

    /* Image container */
    .login-image-container {
      position: relative;
      height: 100%;
      border-radius: 16px;
      overflow: hidden;
    }

    .login-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 16px;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
      .card-body {
        padding: 1.5rem;
      }

      .card-title {
        font-size: 1.75rem;
      }
    }

    /* Animation for form elements */
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .form-group {
      animation: fadeIn 0.5s ease forwards;
    }

    .form-group:nth-child(2) {
      animation-delay: 0.1s;
    }

    .form-group:nth-child(3) {
      animation-delay: 0.2s;
    }
  </style>

  <script>
    $(document).ready(function () {
      function showError(message) {
        $("#error-message")
          .removeClass("none-error-message")
          .removeClass("alert-success")
          .addClass("alert-danger")
          .html(message);
      }

      function validateForm() {
        const email = $("#username").val().trim();
        const password = $("#password").val().trim();

        // Clear previous error
        $("#error-message").addClass("none-error-message");

        // Validate email
        if (!email) {
          showError("Please enter your email address");
          $("#username").focus();
          return false;
        }

        // Basic email format validation
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(email)) {
          showError("Please enter a valid email address");
          $("#username").focus();
          return false;
        }

        // Validate password
        if (!password) {
          showError("Please enter your password");
          $("#password").focus();
          return false;
        }

        return true;
      }

      $("#btn-login").on("click", function () {
        if (!validateForm()) return;

        $.ajax({
          type: "POST",
          url: `${window.location.origin}/api/v1/auth/login`,
          data: {
            email: $("#username").val().trim(),
            password: $("#password").val(),
            redirectURL: $("#redirectURL").val(),
          },
          withCredentials: true,
          credentials: "include",
          xhrFields: {
            withCredentials: true,
          },
          success: function (response) {
            console.log(">>> check response", response);
            $("#error-message").addClass("none-error-message");
            const redirectURL = `${response.redirectURL}/code?ssoToken=${response.code}`;
            window.location.href = redirectURL;
          },
          error: function (request, status, error) {
            $("#password").val("");
            showError("Invalid email or password");
          },
        });
      });

      // Handle input changes to clear error message
      $("#username, #password").on("input", function () {
        $("#error-message").addClass("none-error-message");
      });

      // Handle Enter key for both email and password fields
      $("#username, #password").on("keypress", function (event) {
        if (event.key === "Enter") {
          event.preventDefault();
          $("#btn-login").click();
        }
      });

      $(".btn-back").on("click", function () {
        window.location.href = "<%= process.env.REACT_PATH_SSO %>";
      });
      $("#iconGoogle").on("click", function () {
        localStorage.removeItem("clientURL");
        localStorage.setItem("clientURL", $("#redirectURL").val());
        window.location.href = "/auth/google";
      });
      $("#iconFacebook").on("click", function () {
        localStorage.removeItem("clientURL");
        localStorage.setItem("clientURL", $("#redirectURL").val());
        window.location.href = "/auth/facebook";
      });
    });

    $(document).ready(function () {
      $("#togglePassword").click(function () {
        const passwordInput = $("#password");
        const icon = $(this).find("i");

        if (passwordInput.attr("type") === "password") {
          passwordInput.attr("type", "text");
          icon.removeClass("bi-eye").addClass("bi-eye-slash");
        } else {
          passwordInput.attr("type", "password");
          icon.removeClass("bi-eye-slash").addClass("bi-eye");
        }
      });
    });
  </script>
  <body>
    <input type="hidden" id="redirectURL" value="<%= redirectURL %>" />
    <div class="container min-vh-100 d-flex align-items-center py-5">
      <div class="row w-100 g-0">
        <div class="col-md-6 mx-auto">
          <div class="card">
            <div class="card-body">
              <button class="btn btn-link btn-back mb-4">
                <img
                  src="/images/back.png"
                  alt="Back"
                  class="me-2"
                  style="width: 20px"
                />
                <span>Back</span>
              </button>

              <h2 class="card-title mb-3">Welcome Back</h2>
              <p class="text-muted mb-4">
                Login to access your EZLIFE Real Estate account
              </p>

              <form id="loginForm" novalidate>
                <div
                  class="alert alert-danger my-3 none-error-message"
                  role="alert"
                  id="error-message"
                ></div>

                <div class="form-group mb-4">
                  <label for="username" class="form-label">Email Address</label>
                  <input
                    type="email"
                    class="form-control"
                    id="username"
                    name="username"
                    placeholder="Enter your email address"
                    required
                  />
                </div>

                <div class="form-group mb-4">
                  <label for="password" class="form-label">Password</label>
                  <div class="input-group">
                    <input
                      type="password"
                      class="form-control"
                      id="password"
                      name="password"
                      placeholder="Enter your password"
                      required
                    />
                    <button
                      class="btn btn-outline-secondary"
                      type="button"
                      id="togglePassword"
                    >
                      <i class="bi bi-eye"></i>
                    </button>
                  </div>
                </div>

                <div class="d-flex justify-content-end mb-4">
                  <a
                    href="/forgot-password"
                    class="text-danger text-decoration-none"
                    >Forgot Password?</a
                  >
                </div>

                <button
                  id="btn-login"
                  type="button"
                  class="btn btn-primary w-100 mb-4"
                >
                  Sign In
                </button>

                <div class="position-relative my-4">
                  <hr />
                  <p
                    class="text-muted position-absolute top-50 start-50 translate-middle bg-white px-3"
                  >
                    or continue with
                  </p>
                </div>

                <div class="social-login mb-4">
                  <a href="/auth/google" id="iconGoogle" class="social-btn">
                    <i class="bi bi-google"></i>
                  </a>
                  <a href="/auth/facebook" id="iconFacebook" class="social-btn">
                    <i class="bi bi-facebook"></i>
                  </a>
                </div>

                <p class="text-center text-muted mb-0">
                  Don't have an account?
                  <a
                    href="/signup"
                    class="text-primary text-decoration-none fw-bold"
                    >Sign up</a
                  >
                </p>
              </form>
            </div>
          </div>
        </div>

        <div class="col-md-6 d-none d-md-block">
          <div class="login-image-container">
            <img
              src="/images/LoginImage.jpg"
              alt="Login illustration"
              class="login-image"
            />
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
